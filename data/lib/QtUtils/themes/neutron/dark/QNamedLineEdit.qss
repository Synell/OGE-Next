
/* QNamedLineEdit */

QWidget[QNamedLineEdit=true] QLineEdit {
	height: 36px;
	border: none;
	border-bottom: 2px solid transparent;
	background-color: #262626;
	font-size: 12px;
	font-weight: bold;
	padding-top: 16px;
	padding-left: 16px;
	padding-right: 12px;
}

QWidget[QNamedLineEdit=true] QLineEdit:hover {
	background-color: #333333;
}

QWidget[QNamedLineEdit=true] QLineEdit:focus {
	border-bottom: 2px solid #8AAEDB;
	background-color: #333333;
}

QWidget[QNamedLineEdit=true] QLabel {
	color: #909090;
	height: 50px;
	border: none;
	font-size: 12px;
	padding-bottom: 24px;
	padding-left: 16px;
}

QWidget[QNamedLineEdit=true] QLabel[hover=true] {
	color: #909090;
}

QWidget[QNamedLineEdit=true] QLabel[focus=true] {
	color: #3C6FB2;
}

QWidget[QNamedLineEdit=true][dark=true] QLineEdit {
	background-color: #1A1A1A;
}



/* QNamedLineEdit - Wide */

QWidget[wide=true] QWidget[QNamedLineEdit=true] QLineEdit, QWidget[QNamedLineEdit=true][wide=true] QLineEdit {
	min-width: 6em;
}

QWidget[wider=true] QWidget[QNamedLineEdit=true] QLineEdit, QWidget[QNamedLineEdit=true][wider=true] QLineEdit {
	min-width: 12em;
}



/* QNamedLineEdit - Main Color */

QWidget[color='{main-color-name}'] QWidget[QNamedLineEdit=true][color='main'] QLineEdit:focus, QWidget[QNamedLineEdit=true][color='{main-color-name}'] QLineEdit:focus {
	border-bottom-color: #{main-color-pressed};
}

QWidget[color='{main-color-name}'] QWidget[QNamedLineEdit=true][color='main'] QLabel[focus=true], QWidget[QNamedLineEdit=true][color='{main-color-name}'] QLabel[focus=true] {
	color: #{main-color-pressed};
}



/* QNamedLineEdit - Neutral Color */

QWidget[color='{neutral-color-name}'] QWidget[QNamedLineEdit=true][color='main'] QLineEdit:focus, QWidget[QNamedLineEdit=true][color='{neutral-color-name}'] QLineEdit:focus {
	border-bottom-color: #{neutral-color-pressed};
}

QWidget[color='{neutral-color-name}'] QWidget[QNamedLineEdit=true][color='main'] QLabel[focus=true], QWidget[QNamedLineEdit=true][color='{neutral-color-name}'] QLabel[focus=true] {
	color: #{neutral-color-pressed};
}
