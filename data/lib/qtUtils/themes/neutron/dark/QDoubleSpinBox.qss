
/* QDoubleSpinBox */

QDoubleSpinBox {
	background-color: transparent;
	color: #FFFFFF;
	border-radius: 5px;
	padding: 0px 4px;
	border: 1px solid #313131;
	height: 32px;
}

QDoubleSpinBox:hover {
	border: 1px solid #3C3C3C;
	background-color: #262626;
}

QDoubleSpinBox:focus {
	border: 1px solid #515151;
	background-color: #262626;
}

QDoubleSpinBox::up-button {
    subcontrol-origin: border;
    subcontrol-position: top right; /* position at the top right corner */
    border-width: 1px;
}

QDoubleSpinBox::up-arrow {
    image: url({path}spinbox/upArrow.png);
    width: 16px;
    height: 16px;
	padding-right: 4px;
}

QDoubleSpinBox::up-arrow:pressed {
    image: url({path}spinbox/upArrowPressed.png);
    width: 16px;
    height: 16px;
	padding-right: 4px;
}

QDoubleSpinBox::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right; /* position at the bottom right corner */
    border-width: 1px;
}

QDoubleSpinBox::down-arrow {
    image: url({path}spinbox/downArrow.png);
    width: 16px;
    height: 16px;
	padding-right: 4px;
}

QDoubleSpinBox::down-arrow:pressed {
    image: url({path}spinbox/downArrowPressed.png);
    width: 16px;
    height: 16px;
	padding-right: 4px;
}
